<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws.tilda.anastasia.biotopeevchargersapp.charger_details.ui.ChargerDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="16dp"
                  android:orientation="vertical">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"/>


        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/charger_id"
            android:text="@string/charger_id_label"/>

        <TextView
            android:id="@+id/charger_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Charger 1"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/charger_location"
            android:text="@string/charger_location_label"/>

        <TextView
            android:id="@+id/charger_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Espoo, Finland"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/charger_speed"
            android:text="@string/charger_speed_label"/>

        <TextView
            android:id="@+id/charger_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fast"
            android:layout_marginBottom="8dp"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/charger_price"
            android:text="@string/reserve_price_label"/>

        <TextView
            android:id="@+id/charger_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0 eur/min"
            android:layout_marginBottom="8dp"/>


        <Button
            android:id="@+id/button_reserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="reserve"/>

    </LinearLayout>

    </ScrollView>


</FrameLayout>
